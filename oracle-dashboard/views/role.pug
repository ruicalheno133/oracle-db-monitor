extends layout

block content
      .w3-col.m10
        header.w3-container.w3-border-bottom
            h1 Role #{role.role}
        .w3-container.w3-section
            table.w3-table.w3-border.w3-bordered.w3-hoverable
                tr
                    th ID 
                    th Role Name
                    th Authentication Type
                tr 
                    td= role.role_id
                    td= role.role
                    td= role.authentication_type