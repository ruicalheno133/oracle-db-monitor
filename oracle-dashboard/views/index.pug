block content
      .w3-col.m10
        .w3-row
          .w3-col.m4
            .w3-card-4.w3-white.w3-margin
              header.w3-container 
                h6 
                  b Database Info
                table.w3-table
                  tr
                    td Name
                    td= status.database_name
                  tr
                    td Platform 
                    td= status.platform_name
                  tr
                    td Uptime 
                    td #{Math.round(status.uptime)} minutes
                  tr
                    td Archiver
                    td= status.archiver
            .w3-card-4.w3-white.w3-margin
              header.w3-container 
                h6 
                  b Storage
                .dashboard_pie
          .w3-col.m8.graph
            .w3-card-4.w3-white.w3-margin
              header.w3-container
                h6 
                  b Users Connected
                .dashboard_sessions_graph
